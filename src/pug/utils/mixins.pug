mixin icon(name,mod)
	if(mod)
		svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
			use(xlink:href="/assets/svg/sprite.svg#" + name)
	else
		svg(class="svg-sprite-icon icon-" + name)
			use(xlink:href="/src/assets/svg/sprite.svg#" + name)

mixin iconClass(name, iconClassName)
	svg(class= iconClassName)
		use(xlink:href="/svg/sprite.svg#" + name)

mixin scroll-status(firstNumber, lastNumber, position)
	.scroll-status
		span#currentScroll.scroll-status__number.scroll-status__number--start= firstNumber
		div(class="span scroll-status__line scroll-status__line--" + position)
			div#scrollVizual.scroll-status__vizual
		span#totalScrolls.scroll-status__number.scroll-status__number--end= lastNumber